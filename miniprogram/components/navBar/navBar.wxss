/* components/navBar.wxss */

page {
  background-color: #f3f4f8;
}

.scroll {
  position: sticky;
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
  background-color: #fff;
}

.tab_view {
  display: inline-block;
  height: 82rpx;
  line-height: 82rpx;
  font-size: 30rpx;
  text-align: center;
}

.active {
  color: #ec4f4f;
}

.tab_line {
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0;
  transition: all 0.3s;
}

.tab_line view {
  width: 77rpx;
  height: 6rpx;
  border-radius: 7rpx;
  background-color: #ec4f4f;
}

.circle {
  position: absolute;
  display: inline-block;
  height: 28rpx;
  width: 28rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 20rpx;
  line-height: 28rpx;
  margin: 15rpx 0 0 -10rpx;
  border: 2rpx solid #ec4f4f;
  background-color: white;
}

.circle_active {
  background-color: #ec4f4f;
  color: #fff;
}

.no_active {
  color: #ec4f4f;
}
