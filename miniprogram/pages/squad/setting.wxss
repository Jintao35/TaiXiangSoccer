/* pages/squad/setting.wxss */
/* 背景层 */
.park {
  position: fixed;
  z-index: -1;
  width: 100vw;
  height: 60vh;
  background-size: cover;
}

.tabbar {
  height: 10vh;
}

/* z轴定位层 */
.positions {
  height: 60vh;
}

/* 横向对齐层 */
.row {
  display: flex;
  justify-content: center;
}

/* 占位层 */
.cell {
  width: 20vw;
}

/* 最里层默认 */
.position {
  display: inline-block;
  color:rgba(0, 0, 0, 0.4);
  background: rgba(192, 192, 192, 0.3);
  border-radius: 18px;
  text-align: center;
  margin: 1vh;
  height: 8vh;
  line-height: 8vh;
  width: -webkit-fill-available;
}

/* 最里层被选中 */
.checked {
  color:rgba(255, 255, 255, 0.7);
  background:rgba(0, 192, 255, 0.6);
}

/* 阵型多列选择器 */
.picker {
  width: 100%; height: 25vh;
}